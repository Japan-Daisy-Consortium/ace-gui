{
  "name": "ace-gui",
  "productName": "Ace by DAISY",
  "version": "1.0.0-beta.0",
  "description": "A desktop app for Ace, the EPUB accessibility checker by the DAISY Consortium",
  "author": "DAISY Consortium",
  "main": "./app/main.js",
  "repository": "daisy/ace-gui",
  "license": "MIT",
  "build": {
    "appId": "org.daisy.ace",
    "mac": {
      "category": "my.category"
    }
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.3",
    "electron-react-devtools": "^0.5.3",
    "electron-reload": "^1.2.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  },
  "dependencies": {
    "@daisy/ace-config": "^1.0.0",
    "@daisy/ace-core": "^1.0.2",
    "@material-ui/core": "^3.0.0",
    "@material-ui/icons": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "prop-types": "^15.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-splitter-layout": "^3.0.1",
    "react-tabs": "^2.2.2",
    "tmp": "^0.0.33",
    "typeface-roboto": "^0.0.54"
  },
  "scripts": {
    "bundle": "webpack",
    "dev": "webpack --mode development",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "serve": "electron .",
    "start": "concurrently -r -k \"yarn bundle\" \"yarn serve\"",
    "start-dev": "concurrently -r -k \"webpack --mode development\" \"yarn serve\""
  }
}
